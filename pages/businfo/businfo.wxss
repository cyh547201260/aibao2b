/* pages/businfo/businfo.wxss */
page{
  background: #F1F1F1;
  padding-bottom: 170rpx;
}
.page-box{
  background: white;
  margin-top: 20rpx;
}
.form-title{
  padding: 15rpx 30rpx;
}
.form-title view:first-child{
  font-size: 32rpx;
  color: #333;
}
.form-title view:nth-child(2){
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}
.from-item{
  display: flex;
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
}
.from-item::before{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #eee;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
}
.from-item view{
  flex: 2;
  font-size: 30rpx;
  color: #333;
}
.from-item input{
  flex: 4;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
}
.choose-image-box{
  background: white;
  margin-top: 20rpx;
  padding: 20rpx 0;
}
.choose-image{
  width: 240rpx;
  height: 310rpx;
  background: #eee;
  margin: 0 auto;
}
.choose-image image{
  width: 100%;
  height: 100%;
}
.pre-image-tip{
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-top: 12rpx;
}
.bot-btn-box{
  position: fixed;
  width: 100%;
  background: white;
  padding: 20rpx 0;
  left: 0;
  bottom: 0;
}
.bot-btn-box view{
  margin: 0 auto;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: white;
  background: #4AD59E;
  width: 94%;
  margin-left: 3%;
}
.pop-choose-box{
  position: fixed;
  width: 100%;
  height: 90vh;
  left: 0;
  bottom: 0;
  background: pink;
  z-index: 999;
}
.pop-mask{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: black;
  opacity: .5;
  z-index: 998;
}
.filter-step2-box{
  position: absolute;
  width: 50%;
  height: 100%;
  right: 0;
  background: #F1F1F1;
  top: 0;
}
.filter-step2-box.filter-address-left{
  left: 0;
  background: white;
}
.filter-step-box-scroll view{
  font-size: 26rpx;
  color: #333333;
  height: 92rpx;
  line-height: 92rpx;
  padding-left: 30rpx;
  position: relative;
  text-align: left;
}
.filter-step-box-scroll view:first-child::before{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #D8D8D8;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
}
.filter-step-box-scroll view::after{
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #D8D8D8;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
}
.map-view{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: #eeeeee;
  z-index: 99999;
}
.addressConfirm{
  position: fixed;
  width: 100%;
  height: 90rpx;
  background: #4AD59E;
  margin: 0 auto;
  color: white;
  font-size: 32rpx;
  bottom: 0;
  text-align: center;
  line-height: 90rpx;
}