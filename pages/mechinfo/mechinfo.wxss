/* pages/mechinfo/mechinfo.wxss */
page{
  background: #F1F1F1;
  padding-bottom: 180rpx;
}
.mech-info-block{
  background: white;
  margin-top: 20rpx;
}
.info-block-title{
  font-size: 30rpx;
  color: #333;
  padding: 15rpx 30rpx;
  position: relative;
}
.info-block-title::after{
  content: " ";
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #EEEEEE;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
}
.info-text-input{
  padding: 25rpx 30rpx;
}
.info-text-input textarea{
  font-size: 28rpx;
}
.info-input-box{
  display: flex;
  padding: 0 30rpx;
}
.info-input-box input{
  flex: 9;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 28rpx;
}
.info-input-box view{
  flex: 2;
  height: 75rpx;
  line-height: 75rpx;
}
.info-input-box view span{
  display: inline-block;
  font-size: 26rpx;
  color: white;
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  background: #30C893;
  border-radius: 5rpx;
}
.info-input-box view span:first-child{
  margin-left:20rpx;

}
.info-input-box view span:nth-child(2){
  margin-left:6rpx;
}
.image-item{
  float: left;
  width: 220rpx;
  line-height: 140rpx;
  height: 140rpx;
  background: #F2F2F2;
  position: relative;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
}
.image-item image{
  width: 100%;
  height: 100%;
}
.add-item-btn{
  font-size: 70rpx;
  font-weight: bold;
  text-align: center;
  color: #BCBABA;
}
.images-list{
  overflow: hidden;
  padding: 30rpx 0 30rpx 20rpx;
}
.del-image-btn{
  display: block;
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  background: #FA3B3B;
  color: white;
  font-size: 28rpx;
  border-radius: 50%;
  right: -12rpx;
  top: -12rpx;
}
.save-btn-box{
  position: fixed;
  width: 100%;
  background: white;
  bottom: 0;
  padding: 20rpx 0;
}
.save-btn{
  background: #4AD59E;
  color: white;
  text-align: center;
  font-size: 32rpx;
  border-radius: 8rpx;
  display: inline-block;
  padding: 22rpx 0;
  width: 100%;
}